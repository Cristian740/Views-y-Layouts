<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context="com.example.hp.proyecto1.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/logop"
            android:layout_gravity="center"
            android:id="@+id/logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_email"
            android:text="Email"
            android:textSize="18sp"
            android:textColor="@color/ColorPrimaryTextColor"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_email"
            android:hint="Introduce tu email"
            android:textColorHint="@color/ColorPrimaryLight"
            android:textColor="@color/ColorPrimaryTextColor"
            android:inputType="textWebEmailAddress"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_password"
            android:text="Password"
            android:textSize="18sp"
            android:textColor="@color/ColorPrimaryTextColor"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pass"
            android:hint="Introduce tu password"
            android:textColorHint="@color/ColorPrimaryLight"
            android:textColor="@color/ColorPrimaryTextColor"
            android:inputType="textPassword"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/log_in"
            android:background="@color/ColorPrimaryLight"
            android:textColor="@color/ColorPrimaryTextColor"
            android:text="Iniciar sesión"
            android:onClick="iniciar"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            tools:ignore="OnClick" />


        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/ColorPrimaryTextColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up"
            android:text="Registrate en Paredón"
            android:textStyle="bold"
            android:textColor="@color/ColorPrimaryTextColor"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgot_password"
                android:text="Olvidaste tu contraseña"
                android:textColor="@color/ColorPrimaryTextColor"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icono_help"
                android:src="@drawable/ic_help"
                android:tint="@color/colorAccent"
                />
        </LinearLayout>


    </LinearLayout>

    </ScrollView>



</LinearLayout>
